.field-basic {
    padding: 5px 10px;
    width: 100%;
    transition: all 0.35s ease;
    min-height: 38px;

    &:focus, &:active {
        box-shadow: inset 0 0 10px 0 rgba(#000, 0.25);
    }
}

.contact-form {
    @media $small-desktop-min {
        display: block;
        margin-left: auto;
        max-width: 460px;
    }
}

.field-white {
    @extend .field-basic;
    min-height: 38px;    
}