$spacings = 10px, 20px, 30px, 40px, 50px, 60px, 70px, 80px, 90px, 100px;

for $spacing, i in $spacings {
	.pdt-{i + 1} {
		&:not(.keep-pdt) {
			@media $tablet-max {
				padding-top: ($spacing / 2);
			}
		}

