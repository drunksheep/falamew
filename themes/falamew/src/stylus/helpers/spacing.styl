.w-100 {
	width: 100%;
}

.full {
	@extend .w-100;
	display: block;
}

.half {
	@media print {
		float: left;
		width: 47.5%;
	}

	@media $small-desktop-min {
		width: 47.5%;
	}

	& + .half {
		@media $tablet-max {
			margin-top: 20px;
		}

		&:not(:nth-child(2n+3)) {
			@media print {
				margin-left: 5%;
			}
		}
	}
}

.half-generic {
	@extend .half;

	& + .half-generic {
		@media $tablet-max {
			margin-top: 20px;
		}

		&:not(:nth-child(2n+3)) {
			@media $small-desktop-min {
				margin-left: 5%;
			}
		}

		&:nth-of-type(n+3) {
			@media $small-desktop-min {
				margin-top: 30px;
			}
		}
	}
}

.half-child {
	@extend .half;

	& + .half-child:not(:nth-child(2n+3)) {
		margin-left: 5%;
	}

	&.block-50 {
		&:nth-of-type(n+3) {
			@media $small-desktop-min {
				margin-top: 30px;
			}
		}
	}
}

.one-third {
	@media print {
		float: left;
	}

	@media $small-desktop-min {
		width: 31.66%;
	}
}

.one-third-child {
	@extend .one-third;

	& + .one-third-child:not(:nth-of-type(3n+4)) {
		margin-left: 2.5%;
	}
}

